{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules",
    "typings/custom"
  ]
}